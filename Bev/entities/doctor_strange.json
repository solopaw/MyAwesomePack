{
  "format_version": "1.8.0",
  "minecraft:entity": {
    "description": {
      "identifier": "avengers:doctor_strange",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
     			"minecraft:summon": {
	    "minecraft:spawn_entity": [
		  {
		    "min_wait_time": 0.1,
		    "max_wait_time": 0.1,
			"spawn_entity": "avengers:orange_power"
		  }
		],
        "minecraft:timer": {
          "time": [ 2.0, 2.0 ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:stop",
            "target": "self"
          }
       }
                  }
    },
    "components": {
      "minecraft:type_family": {
        "family": [ "hero", "scarlet_witch" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/doctor_strange.json"
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },
	"minecraft:health": {
	   "value": 500,
	   "max": 500
	},
      "minecraft:can_climb": {
      },
      "minecraft:movement": {
        "value": 0.3
      },
      "minecraft:attack": {
        "damage": 2
      },
        "minecraft:damage_sensor": [
                                {
                    "on_damage": {
                         "filters":
                              {"test" :  "is_family", "subject" : "other", "value" :  "monster" },
                         "event": "minecraft:summon"
                                 },
                    "deals_damage": true
              }
           ],
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_damage_blocks": true
      },
      "minecraft:movement.basic": {
        
      },
      "minecraft:jump.static": {
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": -1,
        "inhaleTime": 3.75,
        "generatesBubbles": false
      },
      "minecraft:nameable": {
      },
      "minecraft:behavior.move_towards_restriction": {
        "priority": 5,
        "speed_multiplier": 1
      },
      "minecraft:behavior.melee_attack": {
        "priority": 3,
        "speed_multiplier": 1,
        "track_target": false
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "within_radius": 25,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "monster"
                }
              ]
            },
            "max_dist": 35
          },
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "baby_turtle"
                },
                {
                  "test": "in_water",
                  "subject": "other",
                  "operator": "!=",
                  "value": true
                }
              ]
            },
            "max_dist": 35
          }
        ],
        "must_see": true,
        "must_see_forget_duration": 17.0
      },
      "minecraft:physics": {
      },
      "minecraft:scaffolding_climber": { }
    },
    "events": {
      "minecraft:summon": {
        "add": {
          "component_groups": [
            "minecraft:summon"
          ]
        }
      },
      "minecraft:stop": {
        "remove": {
          "component_groups": [
            "minecraft:summon"
          ]
        }
      }
    }
  }
}
